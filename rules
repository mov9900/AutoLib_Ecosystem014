rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // ✅ Admins Collection
    match /admins/{adminId} {
      allow read: if request.auth != null;
      allow write: if false; // only manually set
    }

    // ✅ Users Collection
    match /users/{userId} {
      allow read, update: if request.auth != null && request.auth.uid == userId;
      allow create: if request.auth != null && request.auth.uid == userId;
    }

    // ✅ Books Collection
    match /books/{bookId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && exists(/databases/$(database)/documents/admins/$(request.auth.uid));
    }

    // ✅ Borrowed Books
    match /borrowedBooks/{docId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow update, delete: if false;
    }

    // ✅ Returned Books
    match /returnedBooks/{docId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow update, delete: if false;
    }

    // ✅ Check-ins (Library Entry/Exit)
    match /checkins/{docId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow update, delete: if false;
    }

    // ✅ Cooldown (Entry cooldown logic)
    match /cooldowns/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
